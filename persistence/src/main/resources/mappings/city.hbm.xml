<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.parkhomenko.common.domain.City" table="CITY">
        <meta attribute="class-description">
            This class contains the city detail.
        </meta>
        <id name="id" column="CITY_ID" type="long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">city_id_seq</param>
            </generator>
        </id>

        <property name="name" column="NAME" type="string"/>

        <component name="geolocation" class="com.parkhomenko.common.domain.Geolocation">
            <property name="lat" column="LAT" type="double"/>
            <property name="lng" column="LNG" type="double"/>
        </component>
    </class>
</hibernate-mapping>